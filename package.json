{
    "name": "@ionaru/node-utils",
    "type": "module",
    "version": "0.0.0",
    "description": "My package node-utils",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "clean": "npx -q rimraf dist",
        "build": "npm run clean && tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/**/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest src",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!src/__mocks__/*.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/node-utils",
    "license": "MIT",
    "devDependencies": {
        "@ionaru/eslint-config": "^8.4.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.10",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "eslint": "^8.29.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.6",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.16.0",
        "eslint-plugin-unicorn": "^45.0.1",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.3"
    }
}
